{
    "Logging": {
        "LogLevel": {
            "Default": "Debug",
            "System": "Information",
            "Microsoft": "Information"
        }
    },
    "Kafka": {
        "Consumer": {
            "group.id": "my-sample-group",
            "bootstrap.servers": "localhost:9092",
            "auto.offset.reset": "earliest"
        },
        "Topics": [
            {
                "TypeName": "events.SampleEvent, events",
                "Name": "sample-product.sample-event"
            }
        ]
    }
}